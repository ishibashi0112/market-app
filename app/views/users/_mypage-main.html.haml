.l-content
  .mypage-main
    .mypage-main-head
      %h2 出品済みアイテム一覧
    .mypage-main-moreBtn
      = link_to "もっと見る >", index_seller_page_user_path ,class:"mypage-btn"
    .mypage-main-list
      - if @selling_items != []
        - @selling_items.limit(3).each do |item| 
          - if item.seller_id == current_user.id
            = link_to item_path(item.id) ,  class: "mypage-main-list__products--data" do
              .dataImage
                - item.images.first(1).each do |item_image|
                  = image_tag item_image.image.url  ,width: "100%",height:"150px"
              .dataInfo
                .dataInfo--name
                  = item.name
                .dataInfo--price
                  = "#{item.price}円"
                  %p (税込)
      - else
        .mypage-main-none
          %p 現在、出品済みの商品はございません。
  .mypage-main
    .mypage-main-head
      %h2 購入済みアイテム一覧
    .mypage-main-moreBtn
      = link_to "もっと見る >", index_buyer_page_user_path ,class:"mypage-btn"
    .mypage-main-list
      - if @buying_items != []
        - @buying_items.limit(3).each do |item| 
          - if item.buyer_id == current_user.id
            = link_to item_path(item.id) ,  class: "mypage-main-list__products--data" do
              .dataImage
                - item.images.first(1).each do |item_image|
                  = image_tag item_image.image.url  ,width: "100%",height:"150px"          
              .dataInfo
                .dataInfo--name
                  = item.name
                .dataInfo--price
                  = "#{item.price}円"
                  %p (税込)
      - else 
        .mypage-main-none
          %p 現在、購入済みの商品はございません。