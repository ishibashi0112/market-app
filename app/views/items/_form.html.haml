.form
  = form_for [@item],html: { multipart: true } do |f|
    .name
      .label 商品名
      =f.text_field :name
    .image
    #image-box 
      =f.fields_for :images do |image|
        .label 商品画像
        .js-file_group{"data-index" => "#{image.index}"}
          = image.file_field  :url, class: 'js-file'
          %br/
          %span.js-remove 
    .price
      .label 価格
      =f.number_field :price
      .needs 必須
    .categoly_id
      .label カテゴリID
      =f.number_field :category_id
    .description
      .label 商品説明
      =f.text_field :description
      .needs 必須
    .brand
      .label ブランド名
      =f.text_field :brand_name
    .item_condition
      .label 状態
      =f.select :item_condition,[["新品", 0],["未使用に近い", 1],["使用感あり", 2],["目立つキズなどがある",3]]
      .needs 必須
    .shipping_payer
      .label 送料
      =f.select :shipping_payer,[["出品者負担(送料込み）", 0],["購入者負担（代引き）", 1]]
      .needs 必須
    .shipping_from_area
      .label 発送元
      =f.text_field :shipping_from_area
      .needs 必須
    .shipping_duration
      .label 発送までの期間
      =f.select :shipping_duration,[["1−２日", 0],["3−４日", 1],["5-7日", 2],["一週間以上",3]]
      .needs 必須
    .user_id
      .label user_id
      = current_user.id
    .submit_btn
    =f.submit '出品する'